<form action="/<%= @fact[:id] %>" method="fact">

  <div>
    <label>Title</label>
    <input type="text" name="title" placeholder="Enter a title for your fact" value="<%= @fact[:title]%>">
  </div>

  <div>
    <label>Description</label>
    <textarea name="body" rows="8" cols="80" placeholder="Enter a description for your fact"><%= @fact[:body]%></textarea>
  </div>

  <input type="submit" value="submit">

  <% if (@fact[:id] != '') %>

  <input type="hidden" name="_method" value="PUT">

  <% end %>
</form>
